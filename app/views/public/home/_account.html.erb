<div class="items-center bg-gray-50 rounded-lg shadow sm:flex dark:bg-gray-800 dark:border-gray-700"
     data-controller="public--card" data-public--card-id-value="<%= account.id %>"
     data-public--card-handle-value="<%= account.mastodon_handle %>"
     data-public--card-account-value=""
     data-public--card-status-value="<%= account.status %>">
  <div style="background-image: url(<%= asset_path 'missing.png' %>)"
       class="relative cursor-pointer rounded-t-lg sm:rounded-tr-none sm:rounded-l-lg w-full h-60 sm:h-full sm:w-1/3 bg-cover bg-center bg-no-repeat"
       data-public--card-target="avatar" data-action="click->public--card#showProfile">
    <% if account.verified? %>
            <span class="opacity-90 absolute sm:rounded-bl-lg bottom-0 w-full h-8 flex justify-center items-center bg-green-100 text-green-800 text-xs font-medium px-2.5 py-0.5 dark:bg-green-700
             dark:text-green-400 border-green-100 dark:border-green-700">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z"/>
              </svg>
              <span class="sr-only">Icon description</span>
              <span class="px-2">Verified</span>
            </span>
    <% end %>
  </div>
  <div class="relative px-3 py-2 w-full sm:w-2/3 md:h-full">
    <div class="flex space-x-3 justify-start items-center pt-2">
      <% if account.people? %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="block w-12 h-12">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15 9h3.75M15 12h3.75M15 15h3.75M4.5 19.5h15a2.25 2.25 0 002.25-2.25V6.75A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25v10.5A2.25 2.25 0 004.5 19.5zm6-10.125a1.875 1.875 0 11-3.75 0 1.875 1.875 0 013.75 0zm1.294 6.336a6.721 6.721 0 01-3.17.789 6.721 6.721 0 01-3.168-.789 3.376 3.376 0 016.338 0z" />
        </svg>
      <% else %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="block w-12 h-12">
          <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 21h19.5m-18-18v18m10.5-18v18m6-13.5V21M6.75 6.75h.75m-.75 3h.75m-.75 3h.75m3-6h.75m-.75 3h.75m-.75 3h.75M6.75 21v-3.375c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21M3 3h12m-.75 4.5H21m-3.75 3.75h.008v.008h-.008v-.008zm0 3h.008v.008h-.008v-.008zm0 3h.008v.008h-.008v-.008z"/>
        </svg>
      <% end %>
      <div>
        <h3 class="text-xl font-bold tracking-tight text-gray-900 dark:text-white">
          <a class="text-blue-600 dark:text-blue-500 hover:underline cursor-pointer" data-action="click->public--card#showProfile"><%= account.name %></a>
        </h3>
        <small class="text-gray-500 dark:text-gray-400 hover:underline cursor-pointer" data-action="click->public--card#showProfile"><%= account.mastodon_handle %></small>
      </div>
    </div>
    <div class="external-content line-clamp-3 text-sm mt-2 mb-4 font-light text-gray-500 dark:text-gray-400 h-14 overflow-hidden text-ellipsis"
         data-public--card-target="description"><%= account.mastodon_account&.[]('note')&.html_safe %></div>
    <div class="absolute top-2 right-2 flex flex-col space-y-1 items-end">
      <button class="inline-flex items-center p-1 text-xs font-medium text-center text-gray-900 bg-white
       border border-gray-300 rounded-md hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-gray-200
        dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700 dark:hover:border-gray-700
         dark:focus:ring-gray-700" data-public--card-target="viewProfile" data-action="public--card#viewProfile"
              data-modal-target="public--card" data-modal-show="public--card" disabled>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 3.75v4.5m0-4.5h4.5m-4.5 0L9 9M3.75 20.25v-4.5m0 4.5h4.5m-4.5 0L9 15M20.25 3.75h-4.5m4.5 0v4.5m0-4.5L15 9m5.25 11.25h-4.5m4.5 0v-4.5m0 4.5L15 15"/>
        </svg>
      </button>
    </div>
  </div>
</div>